{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/core",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "shell:allow-open",
    "shell:default",
    "dialog:default",
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        {
          "url": "https://github.com"
        }
      ]
    }
  ]
}